<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/gradient_backg"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
android:clickable="true"
android:focusable="true"
android:focusableInTouchMode="true"
tools:context="fall2018.csc2017.GameCentre.GameChoiceActivity">



<TextView
    android:id="@+id/GameText"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:text="Welcome to TacTacToe"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="@android:color/white"
    android:textSize="18sp" />

<Button
    android:id="@+id/connect4button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/GameText"
    android:layout_centerHorizontal="true"
    android:text="Player vs. Player" />

<Button
    android:id="@+id/randomAI_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/GameText"
    android:layout_toStartOf="@+id/connect4button"
    android:text="Player vs. AI (Easy)" />

<Button
    android:id="@+id/minimaxAI_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/GameText"
    android:layout_toEndOf="@+id/connect4button"
    android:text="PLAYER VS AI(Hard)" />


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DriverMapActivity" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LogoutButton"
        android:text="Log out"/>

    <Button
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MainMenu"
        android:text="Main Menu"/>
    </FrameLayout>

<TextView
    android:id="@+id/welcomeText"
    android:layout_width="279dp"
    android:layout_height="95dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="175dp"
    android:text="@string/welcome_back_user"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="@android:color/white"
    android:textSize="30sp" />


</RelativeLayout>
